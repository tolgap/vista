<p id="notice"><%= notice %></p>

<div class="intro page-header">
  <h1><%= @website.name.titleize %> <small>detail</small></h1>
</div>

<div class="accordion" id="accordion-website">
  <div class="accordion-group website single">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-website" href="#accordion-<%= @website.id %>">
        <h3><%= @website.name.titleize %></h3>
      </a>
      <div class="website-info">
        <p class="version">Core version: <span class="badge badge-info"><%= @website.version %></span></p>
        <p class="number-of-plugins">Number of plugins: <strong><%= @website.plugins.count %></strong></p>
        <p class="updated">Last updated <strong><%= time_ago_in_words(@website.updated_at) %></strong> ago</p>
      </div>
    </div>
    <div id="accordion-<%= @website.id %>" class="accordion-body collapse in">
      <div class="accordion-inner">
        <h4>Plugins</h4>
        <ul class="plugins-list unstyled">
          <% @website.plugins.each do |plugin| %>
            <%= create_list_item(plugin).html_safe %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>